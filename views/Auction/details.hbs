<main>
    <section id="catalog-section">

        <h1 class="item">
            {{selectedAuction.title}}
        </h1>
        <div class="item padded">

            <div class="layout right large">

                <div class="col">
                    <img src="{{selectedAuction.image}}" class="img-large">
                </div>

                <div class="content pad-med">

                    <p>In category: <strong>{{selectedAuction.category}}</strong></p>
                    <p>{{selectedAuction.description}}</p>

                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{selectedAuction.price}}</strong>
                        </div>

                        <!-- If current user can place a bid -->
                        {{#if isAuthenticated}}
                        <form class="vertical" method="post" action="#">
                            <label><span>Bid amount</span><input type="number" name="amount"></label>
                            <input class="action" type="submit" value="Place bid">
                        </form>

                        <!-- If current user is the bidder -->
                        <div>
                            You are currently the <strong>highest bidder</strong> for this auction
                        </div>

                        {{/if}}
                    </div>

                </div>
            </div>

            <footer>Listed by Peter Jackson</footer>
        </div>


    </section>

</main>